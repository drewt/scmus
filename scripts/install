# TODO: set this elsewhere
GINSTALL=install

flags=""
while test $# -gt 0
do
	case $1 in
		-*)
			flags="$flags $1"
			;;
		*)
			break
			;;
	esac
	shift
done

test $# -lt 2 && exit 0

to="${DESTDIR}${1}"
shift
$GINSTALL -d -m755 "${to}"
for i in "$@"
do
	dest="${to}/`basename ${i}`"
	test "$INSTALL_LOG" && echo "$dest" >> "$INSTALL_LOG"
	if [[ -z "$verbose" ]]
	then
		echo "  INSTALL ${dest}"
	else
		echo "  $GINSTALL $flags \"$i\" \"${to}\""
	fi
	$GINSTALL $flags "$i" "${to}"
done
